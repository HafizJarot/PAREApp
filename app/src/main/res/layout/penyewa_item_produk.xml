<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    app:cardCornerRadius="6dp"
    android:background="#FDFAFA"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_produk"
                android:scaleType="centerCrop"
                android:src="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="120dp"/>

<!--            <ImageView-->
<!--                android:id="@+id/img_delete"-->
<!--                android:layout_margin="10dp"-->
<!--                android:layout_alignEnd="@id/iv_produk"-->
<!--                android:layout_alignTop="@id/iv_produk"-->
<!--                android:src="@drawable/ic_delete_black_24dp"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"/>-->

        </RelativeLayout>

        <TextView
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:text="Nama pemilik"
            android:textSize="15sp"
            android:id="@+id/tv_nama_pemilik"
            android:maxLines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:maxLines="5"
            android:textSize="12dp"
            android:layout_marginBottom="13dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="ini adalah ukuran"
            android:id="@+id/tv_ukuran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:maxLines="5"
            android:textSize="12dp"
            android:layout_marginBottom="13dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="ini adalah lokasi"
            android:id="@+id/tv_lokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:maxLines="5"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textColor="#28a2cf"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Rp5.000"
            android:id="@+id/tv_harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

