<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.penyewa.order.PenyewaOrderActivity">

    <com.github.florent37.shapeofview.shapes.ArcView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:shape_arc_height="30dp"
        app:shape_arc_position="bottom">

        <FrameLayout
            android:background="@drawable/grad_bg"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

    </com.github.florent37.shapeofview.shapes.ArcView>


    <com.google.android.material.card.MaterialCardView
        android:layout_margin="15dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginBottom="20dp"
                android:textSize="30sp"
                android:text="Pesan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:text="pilih atnggal"
                android:id="@+id/show_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/label_tanggal_mulai"
                    android:layout_marginBottom="10dp"
                    android:textSize="18sp"
                    android:text="Tanggal Mulai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/txt_tanggal_mulai"
                    android:layout_marginBottom="10dp"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/label_tanggal_selesai"
                    android:layout_marginBottom="10dp"
                    android:textSize="18sp"
                    android:text="Tanggal Selesai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/txt_tanggal_selesai"
                    android:layout_marginBottom="10dp"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:id="@+id/txt_username"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:text="Nama Pemesan : "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginBottom="10dp"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

            <TextView
                android:layout_marginBottom="10dp"
                android:id="@+id/txt_harga"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:text="Harga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginBottom="10dp"
                android:id="@+id/txt_sisi"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:text="Sisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginBottom="10dp"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

            <TextView
                android:layout_marginBottom="10dp"
                android:id="@+id/txt_total_harga"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:text="Total Harga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:enabled="false"
                android:text="order"
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:id="@+id/btn_order"
                android:backgroundTint="#4682B4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>
