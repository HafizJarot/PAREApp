<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    tools:context=".activiities.penyewa.order_activity.PenyewaOrderActivity">

    <com.google.android.material.card.MaterialCardView
        android:layout_margin="15dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginBottom="20dp"
                android:textSize="30dp"
                android:text="Pesan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_username"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:text="Nama Pemesan : "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginBottom="10dp"
                android:id="@+id/txt_tanggal_mulai"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:text="harga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginBottom="10dp"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

            <TextView
                android:layout_marginBottom="10dp"
                android:id="@+id/txt_harga"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:text="harga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginBottom="10dp"
                android:id="@+id/txt_sisi"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:text="sisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginBottom="10dp"
                android:id="@+id/txt_lama_sewa"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:text="lama sewa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginBottom="10dp"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

            <TextView
                android:layout_marginBottom="10dp"
                android:id="@+id/txt_total_harga"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:text="Total Harga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:text="order"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                android:id="@+id/btn_order"
                android:backgroundTint="#FF9800"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>
