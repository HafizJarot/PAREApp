<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.hafiz.pareapp">
    <!-- <dist:module dist:instant="true" /> -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:replace="android:allowBackup">
        <activity android:name="com.hafiz.pareapp.ui.pemilik.tarik_saldo.TarikSaldoActivity"></activity>
        <activity android:name="com.hafiz.pareapp.ui.penyewa.panoramic_view.PanoramicView"></activity>
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.hafiz.pareapp.ui.penyewa.produk.PenyewaProdukActivity" />
        <activity android:name="com.hafiz.pareapp.ui.penyewa.order.PenyewaOrderActivity" />
        <activity android:name="com.hafiz.pareapp.ui.pemilik.produk.PemilikProdukActivity" />
        <activity android:name="com.hafiz.pareapp.ui.penyewa.register.PenyewaRegisterActivity" />
        <activity android:name="com.hafiz.pareapp.ui.pemilik.register.PemilikRegisterActivity" />
        <activity android:name="com.hafiz.pareapp.ui.penyewa.update_profile.UpdateProfileActivity" />
        <activity
            android:name="com.hafiz.pareapp.ui.penyewa.detail.PenyewaDetailProdukActivity"
            android:label="@string/title_activity_penyewa_detail_produk"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.hafiz.pareapp.ui.login.LoginActivity" />
        <activity
            android:name="com.hafiz.pareapp.ui.penyewa.main.PenyewaMainActivity"
            android:label="@string/app_name" />
        <activity android:name="com.hafiz.pareapp.ui.pemilik.main.PemilikMainActivity" />

        <service android:name=".utils.fcm.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>